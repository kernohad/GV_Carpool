<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lakerBlue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Header" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/lakerBlue</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="formField" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/login_input_box</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="formLabel" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
